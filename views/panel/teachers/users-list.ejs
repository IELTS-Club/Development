            <% let i =0;
            user.forEach(element => {
              i=i+1 
              function selectUserType(){
                if(element.isTeacher==false){
                  return "دانش آموز"
                }
                return "استاد"
              }
              function selectUserConfirmation(){
                if(element.isConfirmed==true){
                 return "تأیید شده" 
                }
                return "در انتظار تأیید"
              }
              %> 
            
