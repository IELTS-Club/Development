            <input type="text" data-jdp class="icdrn-input" placeholder="تاریخ شروع (۷ خرداد)">
            <input type="time" class="icdrn-input" placeholder="ساعت شروع (۱۵:۰۰)">

          </div>

          <div class="input-row">

            <input type="text" data-jdp class="icdrn-input" placeholder="تاریخ پایان (۸ خرداد)">
            <input type="time" class="icdrn-input" placeholder="ساعت پایان (۱۷:۰۰)">

          </div>


          <div class="input-row">

            <input type="text" class="icdrn-input" placeholder="نوع آزمون ( میان ترم )">
