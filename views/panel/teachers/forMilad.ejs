     })
    
    document.getElementById("editInstructorBtn1").addEventListener("click",()=>{
      
     document.querySelector("#newQuizModal").style.display="flex"
     
    })
    document.getElementById("closeModal").addEventListener("click",()=>{
      document.querySelector("#newQuizModal").style.display="none"
    })
  </script>
   <script>
    const modalform = document.getElementById("modal-form");

    modalform.getElementsByTagName("button")[0].addEventListener("click", () => {
      if(modalform.getElementsByTagName("input")[0].value =='' || modalform.getElementsByTagName("input")[1].value ==''||modalform.getElementsByTagName("input")[2].value ==''||modalform.getElementsByTagName("input")[3].value ==''||modalform.getElementsByTagName("input")[4].value ==''||modalform.getElementsByTagName("input")[5].value =='' ){
        document.getElementById("infoBox").innerHTML="لطفا تمامی فیلد ها را پر کنید" 
        document.getElementById("infoBox").style.color="red" 
      }else{
     
      const quizInfo = {
        examTitle: modalform.getElementsByTagName("input")[0].value,
        examStartDate: modalform.getElementsByTagName("input")[1].value,
        examStartHour: modalform.getElementsByTagName("input")[2].value,
        examStopDate: modalform.getElementsByTagName("input")[3].value,
        examStopHour: modalform.getElementsByTagName("input")[4].value,
        examType: modalform.getElementsByTagName("input")[5].value,
       

      }
     
      const options = {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify(quizInfo)
      }
      fetch("/teachers/change-exam-details/<%= examId %>", options);
      document.getElementById("infoBox").innerHTML="اطلاعات آزمون با موفقیت به روزرسانی شد"
      document.getElementById("infoBox").style.color="green"
    }
    })
  
  </script>
  <script>
    document.getElementById('deleteExamBtn1').addEventListener("click",()=>{
      document.getElementById("areYouSure").style.display="flex"
    })
    document.getElementById('deleteExamBtn2').addEventListener("click",()=>{
      document.getElementById("areYouSure").style.display="flex"
    })
    document.getElementById("imNotSure").addEventListener("click",()=>{
      document.getElementById("areYouSure").style.display="none"
    })
  </script>
