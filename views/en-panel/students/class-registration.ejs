      <div class="class-registration">

        <div class="class-registration-title">
          <h2>
            <span>
              |
            </span>
            Register in new Class
          </h2>
        </div>
        <form action="/en/panel/class-registration" method="POST" >
        <div class="class-registration-grid">

          <div class="class-registration-form">

            <div class="coursename-box">

              <label for="" class="icdrn-label">
                Course Name
              </label>

              <div class="select">
                <select id="standard-select" name="className">
                  <option value="Ielts">
                    IELTS online course
                  </option>
                  <option value="Toefl">
                    TOEFL online course
                  </option>
                  <option value="Emigration">
                    Emigration intensive course
                  </option>
                  <option value="Conversation">
                    Conversation Course
                  </option>
                  <option value="PTE">
                    PTE online course
                  </option>
                  <option value="Doulingo">
                    Doulingo online course
                  </option>
                </select>
                <span class="icon"></span>
              </div>

              
            </div>



            <div class="row">
              <div class="coursemode-box">

                <label for="" class="icdrn-label">
                  Course Type
                </label>
  
                <div class="select">
                  <select id="standard-select"  name="classType">
                    <option value="Private">Private</option>
                    <option value="Public">Publik</option>
                  </select>
                  <span class="icon"></span>
                </div>
              </div>
  
              
              <div class="courseteacher-box">
  
                <label for="" class="icdrn-label">
                  Teacher
                </label>
  
                <div class="select">
                  <select id="standard-select" name="classTeacher">
                    <option value="Option 1">
                      Dr. Pezhman Nourzad
                    </option>
                    <option value="Option 2">
                      Ms. Haniye Bahrami
                    </option>
                    <option value="Option 3">
                      Ms. Mina Nouri
                    </option>
                    <option value="Option 4">
                      Ms. Arezoo Zolfahgari
                    </option>
                    <option value="Option 5">
                      Ms. Zahra Rafiee
                    </option>
                    <option value="Option lenght">
                      Mr. Javad Jadid
                    </option>
                  </select>
                  <span class="icon"></span>
                </div>
                
              </div>
            </div>

            
            <div class="coursedeatil-box">

              <label for="" class="icdrn-label">
                Description (Suggested times)
              </label>

              <input type="text" class="coursedeatil-input" placeholder="Description(Time and ETC)">
              
            </div>

            <div class="course-register-btn-box">

              <button type="submit" class="icdrn-btn" disabled>
                Determining and registration
              </button>

            </div>

          </div>
        
          <div class="class-registration-pic">

            <img src="/en/images/class-registration-pic.svg" alt="">

          </div>

        </div>
      </form>
